{
  "name": "saas-app",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "format-and-lint": "biome check .",
    "format-and-lint:fix": "biome check . --write --unsafe",
    "check-types": "turbo run check-types",
    "test:e2e": "pnpm kill-port 3000 3333 || true && playwright test",
    "test:e2e:ui": "pnpm kill-port 3000 3333 || true && playwright test --ui"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@playwright/test": "^1.58.2",
    "@types/node": "^25.2.2",
    "kill-port": "^2.0.1",
    "turbo": "^2.5.8"
  },
  "packageManager": "pnpm@10.17.1",
  "engines": {
    "node": ">=18"
  }
}
